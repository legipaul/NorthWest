	<script type="text/javascript">
		$("#myButton").on("click", function (e) {
			if ($.trim($("#EmailAddress").val()) == "") {
				$("#EmailAddress").attribute(required) = true;
				return false;
			}
			else {
				var VAL = $("#EmailAddress").val().toLowerCase();
				var email = /^[A-Z0-9._%+-]+@@[A-Z0-9.-]+\.[A-Z]{2,4}$/i;
				if (!email.test(VAL)) {
					alertify.warning('Invalid Email Address');
					return false;
				}
				e.preventDefault();
				const commonUrl = @Json.Serialize(@Configuration.GetSection("URL").GetSection("Name").Value);
				var ea = $("#EmailAddress").val().toLowerCase();
				$.ajax({
					type: "GET",
					url: commonUrl + '/api/Newsletter/' + ea,
					contentType: "application/json; charset=utf-8",
					dataType: "json",
					success: OnSuccess,
					error: OnErrorCall
				});
				function OnSuccess(response) {
					if (response.length == 1) {
						alertify.warning('Email Address Already Subscribed');
						$("#EmailAddress").focus();
					}
